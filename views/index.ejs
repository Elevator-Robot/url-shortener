<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">

    <title>URL Shortener UI</title>
</head>
<body>
    <div class="container my-5">
        <h1>URL Shortener</h1>
        <form action="/shorten" method="POST" class="form-inline my-4">
            <label for="fullUrl" class="sr-only">URL</label>
            <input type="url" name="fullUrl" id="fullUrl" placeholder="URL" class="form-control col mx-1">
            <button type="submit" class="btn btn-primary">Shorten</button>
        </form>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach(url => { %>
                    <tr>
                        <td>
                            <span class="far fa-trash-alt" data-url="<%= url.short %>"></span>
                            <span class="fas fa-share-alt" title="<%= url.short %>"></span>
                        </td>
                        <td>
                            <a href="<%= url.full %>"><%= url.full %></a>
                        </td>
                        <td>
                            <a href="<%= url.short %>"><%= url.short %></a>
                        </td>
                        <td>
                            <%= url.clicks %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>